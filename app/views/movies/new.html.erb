<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div style="padding: 30px;">
        <h1>新規Memo</h1>
      </div>
      <div class="card">
        <%= form_with model: @movie, url: movies_path, local:true do |f| %>
          <div style="padding: 10px;">
            <h4>作品名</h4>
            <%= f.text_field :title %>
          </div>
          <div style="padding: 10px;">
            <h4>コメント</h4>
            <%= f.text_area :body, size: "45x7" %>
          </div>
          <%= f.submit 'メモを作成する', class: "btn mb-2", style: "background-color: #78d8e3; color: black;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
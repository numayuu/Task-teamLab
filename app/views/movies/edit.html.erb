<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div style="padding: 30px;">
        <h1>Memo編集</h1>
      </div>
      <div class="card">
        <%= form_with model: @movie, local:true do |f| %>
          <div style="padding: 10px;">
            <h4>作品名</h4>
            <%= f.text_field :title %>
          </div>
          <div style="padding: 10px;">
            <h4>コメント</h4>
            <%= f.text_area :body, size: "45x7" %>
          </div>
          <div style="padding-bottom: 20px;">
            <%= f.submit "Memoを更新", class: "btn btn-success" %>
          </div>
          <%= link_to "メモ詳細へ", movie_path(params[:id]), class: "btn btn-primary" %>
    　　  　<%= link_to "メモ一覧へ", movies_path(params[:id]), class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
